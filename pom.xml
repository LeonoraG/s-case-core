<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>
        <groupId>eu.scasefp7</groupId>
	<artifactId>s-case-core</artifactId>
	<version>1.0.1-SNAPSHOT</version>

        <parent>
            <groupId>eu.scasefp7</groupId>
            <artifactId>scase-parent</artifactId>
            <version>1.0.17</version>
        </parent>

        <developers>
            <developer>
                <name>Themistoklis Diamantopoulos</name>
                <email>thdiamman@issel.ee.auth.gr</email>
                <organization>Aristotle University of Thessaloniki</organization>
                <organizationUrl>http://www.auth.gr/en</organizationUrl>
            </developer>
        </developers>

        <scm>
            <connection>scm:git:git@github.com:s-case/s-case-core.git</connection>
            <developerConnection>scm:git:git@github.com:s-case/s-case-core.git</developerConnection>
            <url>https://github.com/s-case/s-case-core.git</url>
            <tag>HEAD</tag>
        </scm>

	<dependencies>
		<dependency>
			<groupId>org.apache.jena</groupId>
			<artifactId>apache-jena-libs</artifactId>
			<type>pom</type>
			<version>2.13.0</version>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-maven-plugin</artifactId>
				<version>0.23.0</version>
				<extensions>true</extensions>
			</plugin>

			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>target-platform-configuration</artifactId>
				<version>0.23.0</version>
				<configuration>
					<environments>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>linux</os>
							<ws>gtk</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86</arch>
						</environment>
						<environment>
							<os>win32</os>
							<ws>win32</ws>
							<arch>x86_64</arch>
						</environment>
						<environment>
							<os>macosx</os>
							<ws>cocoa</ws>
							<arch>x86_64</arch>
						</environment>
					</environments>
				</configuration>
			</plugin>

		</plugins>
	</build>



</project>
